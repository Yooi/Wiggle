{
  "version": 2,
  "name": "wiggle",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "signaling-server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/ws",
      "dest": "/signaling-server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "signaling-server/server.js": {
      "runtime": "@vercel/node@18"
    }
  },
  "buildCommand": "npm run build:all",
  "devCommand": "npm run dev",
  "installCommand": "npm run install:all",
  "framework": "vite",
  "env": {
    "NODE_ENV": "production"
  }
}
